<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- Swing Main Application -->
    <bean id="mainFrame" class="com.fererlab.app.swt.ui.ApplicationFrame">
        <!--<property name="title" value="UI Tester"/>-->
        <!--<property name="menuTitle" value="Inject-Test"/>-->
        <!--<property name="menuItemListenerMap">-->
            <!--<map>-->
                <!--<entry key="Prototype-Test" value-ref="prototypeController"/>-->
                <!--<entry key="ReusableFactory-Test" value-ref="reusableController"/>-->
            <!--</map>-->
        <!--</property>-->
    </bean>

    <!-- Prototype Views -->
    <bean class="com.fererlab.module.prototype.view.swt.PrototypeView" id="prototypeView"/>
    <bean class="com.fererlab.module.prototype.view.swt.UserView" id="userView"/>
    <bean class="com.fererlab.module.prototype.view.swt.AddressView" id="addressView" scope="prototype"/>

    <!-- Reusable Views -->
    <bean class="com.fererlab.module.reusable.view.swt.ReusableView" id="reusableView"/>
    <bean class="com.fererlab.module.reusable.view.swt.CarView" id="carView"/>
    <bean id="brandView" factory-bean="brandViewGenericFactory" factory-method="createReusableView" scope="prototype"/>
    <bean id="brandViewGenericFactory" class="com.fererlab.module.reusable.factory.ReusableFactory">
        <property name="beanClass">
            <value type="java.lang.Class">com.fererlab.module.reusable.view.swt.BrandView</value>
        </property>
    </bean>

</beans>
